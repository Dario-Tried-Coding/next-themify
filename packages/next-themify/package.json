{
  "name": "next-themify",
  "version": "0.0.0",
  "description": "A typesafe abstraction for advanced theming in you React apps.",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc"
  },
  "keywords": [
    "next.js",
    "theming",
    "react",
    "typescript"
  ],
  "author": "dariotriedcoding",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dario-Tried-Coding/next-themify"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "import": "./dist/types.mjs",
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    }
  },
  "peerDependencies": {
    "react": "^16.8 || ^17 || ^18 || ^19 || ^19.0.0-rc"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/react": "18.3.1",
    "react": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}